<!--pages/danheng_person/danheng_person.wxml-->
<view class='dansheng_person'>
<image src='{{userImg}}' bindtap='picUplaod'></image>{{username}} 
</view>

<view class='dansheng_person_main'>
<navigator url='../person_message/person_message' class='dansheng_person_main_list' hover-class='none' hidden='{{singleUserHiddenFlag}}'>
<image src='/assets/images/111.png'></image>完善个人信息
</navigator>
</view>
<view class='dansheng_person_main'>
<view class='dansheng_person_main_list' bindtap="logout" >
<image src='/assets/images/pic35.png'></image>退出登录
</view>
</view>



<view class="container">
  <modal hidden="{{hidden}}" title="提示" cancel-text="关闭"  bindconfirm="confirm" no-cancel="{{nocancel}}">
    {{content}}
  </modal>
</view>