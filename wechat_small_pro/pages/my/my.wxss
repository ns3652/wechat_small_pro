/* pages/danheng_person/danheng_person.wxss */
page{
  background-color: #f9f8fc;
}
.dansheng_person{
  background: linear-gradient(to right,#bd8fd0,#d78cb6);
  overflow: hidden;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  padding: 35rpx 28rpx;
}
.dansheng_person image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 110rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}
.dansheng_person_main{
  background: #fff;
  overflow: hidden;
  margin-bottom: 30rpx;
  padding-left: 28rpx;
}
.dansheng_person_main_list{
  height: 100rpx;
  line-height: 100rpx;
  background: url(data:image/png;base64,) no-repeat right 28rpx center #fff;
  background-size:14rpx 26rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: block;
  color: #333;
  font-size: 28rpx;
}
.dansheng_person_main_list image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 28rpx;
  vertical-align: middle;
}