/**index.wxss**/
.qipan{
  width:660rpx;
  height:660rpx;
  margin:auto;
}
.block{
  width:40rpx;
  height:40rpx;
  background-color:rgba(10, 88, 235, 0.082);
  margin-left:4rpx;
  margin-top:4rpx;
  float:left;
  font-size:20rpx;
}
.white{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  background-color:#ffffff;
}
.black{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  background-color:#000000;
}
.restart-container{
  margin-bottom: 40rpx;
  width: 660rpx;
  padding: 50rpx;
  bottom: 0rpx;
}

.pearson{
  /* background: linear-gradient(to right,#bd8fd0,#d78cb6); */
  overflow: hidden;
  color: rgb(93, 151, 206);
  font-size: 30rpx;
  font-weight: bold;
  padding: 15rpx 38rpx;
  display: flex;
  flex-direction: row;
}
.pearson image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.user_image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.show-info {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.left {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin:2px;
}

.yaoqing{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.yaoqing_text{
  font-size:30rpx;
}

.jiazai{
  display: flex;
  justify-content: center;
}

.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.dialog-info{
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.dialog-title{
  font-size: 36rpx;
  padding: 30rpx 30rpx 10rpx;
}
.dialog-content{
  padding: 10rpx 30rpx 20rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999999;
}
.dialog-footer{
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}
.dialog-btn{
  display: block;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  color: #3CC51F;
}